<Window x:Class="WpfApp3.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара" Height="520" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Название" Margin="0,4,0,0"/>
            <TextBox x:Name="NameBox" Margin="0,5"/>

            <TextBlock Text="Категория" Margin="0,6,0,0"/>
            <TextBox x:Name="CategoryBox" Margin="0,5"/>

            <TextBlock Text="Производитель" Margin="0,6,0,0"/>
            <TextBox x:Name="ManufacturerBox" Margin="0,5"/>

            <WrapPanel>
                <StackPanel Width="200">
                    <TextBlock Text="Цена" Margin="0,6,0,0"/>
                    <TextBox x:Name="PriceBox" Margin="0,5"/>
                </StackPanel>

                <StackPanel Width="200" Margin="10,0,0,0">
                    <TextBlock Text="Скидка (%)" Margin="0,6,0,0"/>
                    <TextBox x:Name="DiscountBox" Margin="0,5"/>
                </StackPanel>

                <StackPanel Width="200" Margin="0,0,0,0">
                    <TextBlock Text="Количество" Margin="0,6,0,0"/>
                    <TextBox x:Name="QuantityBox" Margin="0,5"/>
                </StackPanel>
            </WrapPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0" >
                <Button Content="Сохранить" Click="Save_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="100"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="Изображение товара" FontWeight="Bold" />
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,8" Width="220" Height="220" HorizontalAlignment="Left">
                <Image x:Name="PreviewImage" Stretch="Uniform" />
            </Border>

            <Button Content="Выбрать изображение..." Click="SelectImage_Click" Width="160" Margin="0,8"/>
            <TextBlock Text="Максимум: 2 MB, максимум 2000x2000 px" FontSize="11" Foreground="Gray" TextWrapping="Wrap" Width="220" Margin="0,4"/>
            <TextBlock x:Name="ImageInfoText" FontSize="11" Foreground="Red" TextWrapping="Wrap" Width="220" Margin="0,4"/>
        </StackPanel>
    </Grid>
</Window>
