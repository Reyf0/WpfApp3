<Window x:Class="WpfApp3.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="ProductEditWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Name"/>
            <TextBox x:Name="NameBox" Margin="0,5"/>
            <TextBlock Text="Category"/>
            <TextBox x:Name="CategoryBox" Margin="0,5"/>
            <TextBlock Text="Manufacturer"/>
            <TextBox x:Name="ManufacturerBox" Margin="0,5"/>
            <TextBlock Text="Price"/>
            <TextBox x:Name="PriceBox" Margin="0,5"/>
            <TextBlock Text="Discount"/>
            <TextBox x:Name="DiscountBox" Margin="0,5"/>
            <TextBlock Text="Quantity"/>
            <TextBox x:Name="QuantityBox" Margin="0,5"/>
            <Button Content="Сохранить" Click="Save_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
