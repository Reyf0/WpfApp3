<Window x:Class="WpfApp3.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <StackPanel Margin="20">
       

        <TextBlock Text="ФИО:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="FullNameTextBox" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="Логин:" Grid.Row="2" Margin="0,0,0,5"/>
        <TextBox x:Name="LoginTextBox" Grid.Row="3" Margin="0,0,0,10"/>

        <TextBlock Text="Пароль:" Grid.Row="4" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="5" Margin="0,0,0,10"/>

        <TextBlock Text="Роль:" Grid.Row="6" Margin="0,0,0,5"/>
        <ComboBox x:Name="RoleComboBox" Grid.Row="4" Margin="0,0,0,5">
            <ComboBoxItem Content="Администратор"/>
            <ComboBoxItem Content="Менеджер"/>
            <ComboBoxItem Content="Пользователь"/>
        </ComboBox>

        <Button Content="Зарегистрироваться" Grid.Row="4" Height="30" Click="Register_Click" Margin="0,79,0,-77"/>
    </StackPanel>
</Window>
