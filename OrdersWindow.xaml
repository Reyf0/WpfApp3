<Page x:Class="WpfApp3.OrdersWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrdersWindow">

    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <Button Content="Назад" Width="80" Click="Back_Click" Margin="0,0,5,0"/>
            <Button Content="Вперед" Width="80" Click="Forward_Click" Margin="0,0,15,0"/>
            <Button Content="Добавить" Width="90" Click="Add_Click" Margin="0,0,5,0"/>
            <Button Content="Редактировать" Width="100" Click="Edit_Click" Margin="0,0,5,0"/>
            <Button Content="Удалить" Width="90" Click="Delete_Click"/>
            <TextBlock x:Name="RoleLabel" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="OrdersGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Товар" Binding="{Binding Path=Product.Name}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Дата выдачи" Binding="{Binding DeliveryDate, StringFormat=d}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
