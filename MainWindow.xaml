<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#EEE" Height="40">
            <TextBlock x:Name="UserInfo" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <Button Content="Товары" Click="Products_Click" Margin="10,0"/>
            <Button Content="Заказы" Click="Orders_Click" Margin="10,0"/>
            <Button Content="Выход" Click="Logout_Click" Margin="10,0"/>
        </StackPanel>
        <Frame x:Name="MainFrame"/>
    </DockPanel>
</Window>
